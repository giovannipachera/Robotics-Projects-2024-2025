<launch>
  <!-- Usa il tempo simulato dalla bag -->
  <param name="use_sim_time" value="true" />

  <!-- Nodo che pubblica odom -> base_link -->
  <node name="odom_to_tf" pkg="second_project" type="odom_to_tf" output="screen" />

  <!-- Static TF: sick_back rispetto a base_link -->
  <node name="static_tf_scan_back" pkg="second_project" type="static_tf_scan_back" output="screen" />

  <!-- Combina scan_front + scan_back in uno scan 360° pulito -->
  <node name="combine_laserscan" pkg="second_project" type="combine_laserscan" output="screen" />

  <!-- SLAM con GMapping ottimizzato -->
  <node name="gmapping" pkg="gmapping" type="slam_gmapping" output="screen">
    
    <!-- Frame di riferimento -->
    <param name="base_frame" value="base_link"/>
    <param name="odom_frame" value="odom"/>

    <!-- Intervallo aggiornamento mappa (più frequente) -->
    <param name="map_update_interval" value="1.0"/>

    <!-- Soglia di movimento per aggiornare la mappa -->
    <param name="linearUpdate" value="0.2"/>
    <param name="angularUpdate" value="0.2"/>
    <param name="temporalUpdate" value="0.5"/>

    <!-- Range massimo utile del laser (leggermente ridotto) -->
    <param name="maxUrange" value="5.5"/>

    <!-- Soglia minima per accettare il matching di scansione -->
    <param name="minimumScore" value="15"/>

    <!-- Risoluzione della mappa (più fine) -->
    <param name="delta" value="0.06"/>

    <!-- Numero di particelle (più robusto) -->
    <param name="particles" value="50"/>

    <!-- Parametri di precisione del matching (ottimizzati) -->
    <param name="llsamplerange" value="0.005"/>
    <param name="llsamplestep" value="0.005"/>
    <param name="lasamplerange" value="0.0025"/>
    <param name="lasamplestep" value="0.0025"/>

    <!-- Usa lo scan combinato 360° -->
    <remap from="scan" to="scan_combined"/>
  </node>

  <!-- RViz per visualizzazione -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find second_project)/rviz/config.rviz" />
</launch>
